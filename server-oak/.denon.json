{
  "files": ["app.ts"],
  "quiet": false,
  "debug": true,
  "fullscreen": true,
  "extensions": [".js", ".ts", ".py", ".json"],
  "interval": 500,
  "watch": ["./"],
  "deno_args": [
    "--allow-net",
    "--allow-write",
    "--allow-read",
    "--allow-plugin",
    "--allow-env",
    "--unstable"
  ],
  "execute": {
    ".js": ["deno", "run"],
    ".ts": ["deno", "run"],
    ".py": ["python"]
  },
  "fmt": false,
  "test": true
}
